<div class="container-fluid">
  <div class="row">
    <div class="col-sm-3 col-md-2 sidebar">
      <%= render 'partials/dashboard-nav' %>
    </div>
    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
      <h1 class="page-header">New Home</h1>
      <%= form_for @home, html: { multipart: true } do |f| %>
      <div class="row">
        <div class="col-md-7">
          <div class="form-group">
            <label>Home Plan</label>
            <%= f.text_field :plan, class: 'form-control', placeholder: 'Home Plan Name' %>
          </div>
          <div class="form-group">
            <label>Home Description</label>
            <%= f.text_area :description, class: 'form-control', placeholder: 'Home Description' %>
          </div>
          <div class="form-group">
            <label>Address</label>
            <%= f.text_field :address, class: 'form-control', placeholder: 'Street Address' %>
          </div>
          <div class="row">
            <div class="col-md-5">
              <div class="form-group">
                <label>City</label>
                <%= f.text_field :city, class: 'form-control', placeholder: 'City' %>
              </div>
            </div>
            <div class="col-md-3">
              <div class="form-group">
                <label>State</label>
                <%= f.text_field :state, class: 'form-control', placeholder: 'State' %>
              </div>
            </div>
            <div class="col-md-4">
              <div class="form-group">
                <label>Zip</label>
                <%= f.text_field :zip, class: 'form-control', placeholder: 'Zip' %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-4">
              <div class="form-group">
                <label>Lot Number</label>
                <%= f.text_field :lot, class: 'form-control', placeholder: 'Lot#' %>
              </div>
            </div>
            <div class="col-md-4">
              <div class="form-group">
                <label>Sqft</label>
                <%= f.text_field :sqft, class: 'form-control', placeholder: 'Sqft' %>
              </div>
            </div>
            <div class="col-md-4">
              <div class="form-group">
                <label>Price</label>
                <%= f.text_field :price, class: 'form-control', placeholder: 'Price' %>
              </div>
            </div>
          </div>
        </div>

        <div class="col-md-5">
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <label>Status</label>
                <%= f.select :status, options_for_select(["Under Construction", "Available", "Pending", "Sold"]), {prompt: 'Status'} %>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label>Garage</label>
                <%= f.select :garage, options_for_select(["1-Car", "2-Car", "3-Car"]), {prompt: 'Select garage'} %>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label>Bedrooms</label>
                <%= f.select :bedrooms, options_for_select(["2", "3", "4", "5"]), {prompt: 'Select bedrooms'} %>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label>Bathrooms</label>
                <%= f.select :baths, options_for_select(["1", "1.5", "2", "2.5", "3", "3.5"]), {prompt: 'Select bathrooms'} %>
              </div>
            </div>
          </div>
        </div>

      </div>
      <div class="row">
        <div class="col-md-12">
          <%= f.fields_for :home_images do |builder| %>
            <%= builder.file_field :image %>
          <% end %>
        </div>
      </div>
        <%= f.submit 'Add Home', class: 'btn btn-default' %>
      <% end %>

    </div>
  </div>
</div>
