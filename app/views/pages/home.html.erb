<%= render 'partials/navbar' %>

<header id="hero_header">
  <div class="container">
    <div class="row">
      <div class="col-xs-offset-0 col-xs-12 col-sm-offset-0 col-sm-12 col-md-offset-1 col-md-10">
        <div class="hero">
          <h1 class="hero__header fadeInDown animated">Welcome Home</h1>
          <p class="hero__sub fadeIn animated">Your dream home awaits!</p>
          <%= link_to "View Homes", homes_path, class: 'hero__btn fadeInUp animated' %>
        </div>
      </div>
    </div>
  </div>
</header>

<main>
  <!-- Block -->
  <div id="block_container">
    <div class="container">
      <div class="col-xs-offset-0 col-xs-12 col-sm-offset-0 col-sm-12 col-md-offset-1 col-md-10">
        <div class="block">
          <p class="block__text">We believe in carefully crafting homes with an emphasis on style and craftsmanship!</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Welcome -->


  <section id="welcome">
    <div class="container">
      <div class="welcome_main">
        <div class="row">
          <div class="col-xs-offset-0 col-xs-12 col-sm-offset-0 col-sm-12 col-md-offset-0 col-md-7">
            <h2 class="welcome__header">Welcome<br/>to <span class="blvd">Blvd</span><span class="builders">Homes</span></span></h2>
            <p class="welcome__text">Boulevard Homes is a home design and construction company building in Metro Nashville, TN and throughout Williamson county including Franklin, Brentwood and Fairview. We custom design and draw the majority of our home plans.  This gives us the ability to play upon the special features of a home site to help create a truly unique home!</p>
            <a href="/homes" class="option__btn">View Homes</a>
          </div>
          <div class="col-xs-offset-0 col-xs-12 col-sm-offset-0 col-sm-12 col-md-offset-0 col-md-5">
            <div class="welcome_contact">
              <h3 class="welcome_contact_header">Get in touch...</h3>
              <p class="welcome_contact_text">Contact sales at <span class="bold">615-799-5391</span>, or use the form below.</p>
              <%= form_for @contact do |f| %>
                  <div class="row no-gutter">
                    <div class="col-xs-12 col-sm-12 col-md-6">
                      <div class="form-group">
                        <%= f.text_field :first_name, class: 'touch__input', placeholder: 'First Name' %>
                      </div>
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-6">
                      <div class="form-group">
                        <%= f.text_field :last_name, class: 'touch__input', placeholder: 'Last Name' %>
                      </div>
                    </div>
                  </div>
                  <div class="form-group">
                    <%= f.email_field :email, class: 'touch__input', placeholder: 'Email' %>
                  </div>
                <div class="form-group">
                  <%= f.text_area :message, class: 'touch__textarea', rows: 3, placeholder: 'Add a message...' %>
                </div>
                <%= f.submit "Send message", name: 'home_btn', class: 'option__btn' %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>


  <section id="home_menu">
    <div class="container">
      <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-4">
          <%= link_to homes_path, class: 'home_menu__link' do %>
            <div class="home_menu_item">
              <%= image_tag 'home_alt.png', class: 'home_menu_item__img' %>
              <h3 class="home_menu_item__header">Available <span class="light_text">Homes</span> <span class="glyphicon glyphicon-arrow-right links_arrow" aria-hidden="true"></span></h3>
              <p class="home_menu_item__description">View our completed and nearly completed homes</p>
            </div>
          <% end %>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-4">
          <%= link_to communities_path, class: 'home_menu__link' do %>
            <div class="home_menu_item">
              <%= image_tag 'home1_alt.png', class: 'home_menu_item__img' %>
              <h3 class="home_menu_item__header">Our <span class="light_text">Communities</span> <span class="glyphicon glyphicon-arrow-right links_arrow" aria-hidden="true"></span></h3>
              <p class="home_menu_item__description">View the communities where our homes are offered</p>
            </div>
          <% end %>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-4">
          <%= link_to homes_path, class: 'home_menu__link' do %>
            <div class="home_menu_item">
              <%= image_tag 'home2_alt.png', class: 'home_menu_item__img' %>
