<%= render 'partials/navbar' %>

<header id="available_header">
  <div class="secondary_header">
    <div class="secondary_header__title">
      <div class="container">
        <div class="row">
          <div class="col-xs-12">
            <h1 class="secondary_header__text">Get More Info</h1>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>

<main>
  <div class="touch">
    <div class="container">
      <div class="row">

        <div class="col-xs-12 col-sm-12 col-md-8">
          <h2 class="touch__header">We are here for you!</h2>
          <p class="touch__text">Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum.</p>
          <p class="touch__text-contact"><span class="bold">Sales:</span> 615-231-1322</p>
          <p class="touch__text">Please fill out the form below to receive more information. We will touch base with you soon!</p>
          <%= form_for @contact do |f| %>
            <div class="row">
              <div class="col-xs-12 col-sm-12 col-md-6">
                <div class="form-group">
                  <label class="touch__label">First Name</label>
                  <%= f.text_field :first_name, class: 'touch__input', placeholder: 'First Name' %>
                </div>
              </div>
              <div class="col-xs-12 col-sm-12 col-md-6">
                <div class="form-group">
                  <label class="touch__label">Last Name</label>
                  <%= f.text_field :last_name, class: 'touch__input', placeholder: 'Last Name' %>
                </div>
              </div>
              <div class="col-xs-12 col-sm-12 col-md-6">
                <div class="form-group">
                  <label class="touch__label">Email</label>
                  <%= f.email_field :email, class: 'touch__input', placeholder: 'Email' %>
                </div>
              </div>
              <div class="col-xs-12 col-sm-12 col-md-6">
                <div class="form-group">
                  <label class="touch__label">Phone</label>
                  <%= f.text_field :phone, class: 'touch__input', placeholder: 'Phone' %>
                </div>
              </div>
              <div class="col-xs-12 col-sm-12 col-md-6">
                <div class="form-group">
                  <label class="touch__label">Address</label>
                  <%= f.text_field :address, class: 'touch__input', placeholder: 'Address' %>
                </div>
              </div>
              <div class="col-xs-12 col-sm-12 col-md-6">
                <div class="form-group">
                  <label class="touch__label">City</label>
                  <%= f.text_field :city, class: 'touch__input', placeholder: 'City' %>
                </div>
              </div>
              <div class="col-xs-12 col-sm-12 col-md-6">
                <div class="form-group">
                  <label class="touch__label">State</label>
                  <%= f.text_field :state, class: 'touch__input', placeholder: 'State' %>
                </div>
              </div>
              <div class="col-xs-12 col-sm-12 col-md-6">
                <div class="form-group">
                  <label class="touch__label">Zip</label>
                  <%= f.text_field :zip, class: 'touch__input', placeholder: 'Zip' %>
                </div>
              </div>
              <div class="col-xs-12 col-sm-12 col-md-6">
                <div class="form-group">
                  <label class="touch__label">Community you are interested in</label>
                  <%= f.collection_select(:community, Community.all, :id, :name, prompt: 'Select a community') %>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-xs-12 col-sm-12 col-md-12">
                <div class="form-group">
                  <label class="touch__label">Questions/Comments</label>
                  <%= f.text_area :message, class: 'touch__textarea', rows: 5, placeholder: 'Questions/Comments' %>
                </div>
              </div>

            </div>
            <button class="touch__btn">Submit</button>
          <% end %>
        </div>
        <div class="col-xs-offset-0 col-xs-12 col-sm-offset-0 col-sm-12 col-md-offset-1 col-md-3">
          <%= render 'partials/sidebar-images' %>
        </div>
      </div>
    </div>
  </div>
</main>

<%= render 'partials/footer' %>
