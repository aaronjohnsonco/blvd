<footer>
  <div class="container">
    <div class="row">
      <div class="col-xs-offset-0 col-xs-12 col-sm-offset-0 col-sm-12 col-md-offset-0 col-md-12">
        <div class="row">
          <div class="col-md-2">
            <div class="footer__container">
              <h3>Find a Home</h3>
              <ul>
                <li>Homes Available</li>
                <li>Communities</li>
              </ul>
            </div>
          </div>
          <div class="col-md-2">
            <div class="footer__container">
              <h3>Connect</h3>
              <ul>
                <li>Contact Us</li>
                <li>Facebook</li>
                <li>Instagram</li>
              </ul>
            </div>
          </div>
          <div class="col-md-2">
            <div class="footer__container">
              <h3>Pages</h3>
              <ul>
                <li>About Us</li>
                <li>Get More Info</li>
              </ul>
            </div>
          </div>
          <div class="col-md-offset-1 col-md-5">
            <div class="footer__container">
              <h3>Get updates on new homes and communities</h3>
              <div class="footer__form">
                <input type="text" class="footer__input" placeholder="Email" />
                <button class="footer__btn">Subscribe</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-offset-0 col-xs-12 col-sm-offset-0 col-sm-12 col-md-offset-0 col-md-12">
        <div class="footer_bottom">
          <%= image_tag 'blvd_logo_white.png', class: 'footer__logo' %>
          <div class="footer_bottom__content">
            <p class="footer_bottom__text">&copy;2017 BLVD Homes. All Rights Reserved.
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>


